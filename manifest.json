{
  "manifest_version": 3,
  "name": "YouTube ContinueOn",
  "description": "Generate a QR code for your current YouTube video to resume playback on another device seamlessly.",
  "version": "1.3",
  "permissions": ["activeTab", "notifications", "tabs", "windows"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon-48.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "48": "icon_grey-48.png",
      "128": "icon_grey.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://youtube.com/*"
      ],
      "js": ["qrcode.min.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+Q"
      },
      "description": "Show QR Code Overlay"
    }
  }
}
