{
    "manifest_version": 3,
    "name": "YouTube QR Generator",
    "description": "Generates a QR code for the current YouTube video with timestamp.",
    "version": "1.1",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {

        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["qrcode.min.js", "content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  